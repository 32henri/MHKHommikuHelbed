<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MHKHommikuHelbed.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView ItemsSource="{Binding Helbeds}" x:Name="HelbedListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Nesquik"
                VerticalOptions="End"
                HorizontalOptions="Center"
                BackgroundColor="AliceBlue"
                TranslationY="-50"
                Clicked="OnButtonClickedCereal"
                FontSize="23"
                TextColor="Black"
                WidthRequest="190"
                HeightRequest="70"
                Grid.Row="1" />
    </Grid>
</ContentPage>
